<Page x:Class="OfficeInstaller.Pages.WelcomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:OfficeInstaller.Pages"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      Title="WelcomePage" Loaded="Page_Loaded"
      d:Background="White" d:DesignHeight="500"
      d:DesignWidth="600"
      mc:Ignorable="d">
    <Page.Resources>
        <Style TargetType="CheckBox" BasedOn="{StaticResource CheckBoxStyle}">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Margin" Value="0,10,0,0" />
        </Style>
        <Style TargetType="RadioButton" BasedOn="{StaticResource RadioButtonStyle1}">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Margin" Value="0,10,0,0" />
        </Style>
        <Style x:Key="GroupBoxStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="BorderBrush" Value="{StaticResource MainBrush}" />
        </Style>
    </Page.Resources>

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"
                Margin="10,0"
                Orientation="Vertical">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"
                    Margin="16,0,0,20"
                    Orientation="Horizontal">
            <Image Source="{StaticResource officeDrawingImage}" />
            <TextBlock VerticalAlignment="Center"
                       Margin="0,0,0,0"
                       Foreground="#cf3900"
                       Text="Office"
                       FontSize="50" FontFamily="Segeo UI Light" />
            <TextBlock VerticalAlignment="Bottom"
                       Margin="4,0,0,18"
                       Foreground="#cf3900"
                       Text="{DynamicResource OnlyAct}"
                       FontSize="12" />
        </StackPanel>
        <StackPanel Margin="10,0,0,0" Orientation="Horizontal">
            <Border Width="3" Height="24"
                    VerticalAlignment="Center"
                    Background="{StaticResource MainBrush}" />
            <TextBlock VerticalAlignment="Center"
                       Margin="10,0,0,0"
                       Foreground="{StaticResource MainBrush}"
                       Text="{DynamicResource InstalledProducts}"
                       FontWeight="Bold"
                       FontSize="16" />
        </StackPanel>
        <ListBox Grid.Row="1"
                 ItemContainerStyle="{DynamicResource ListBoxItemContainerStyle1}"
                 Style="{DynamicResource ListBoxStyle1}"
                 ItemsSource="{Binding Products}" Margin="10,10" BorderThickness="1"/>

        <StackPanel HorizontalAlignment="Center"
                    Margin="0,10"
                    Grid.Row="3"
                    Orientation="Horizontal">
            <TextBlock VerticalAlignment="Center"
                       Text="中文"
                       FontSize="16" />
            <CheckBox VerticalAlignment="Center"
                      Margin="10,0"
                      Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"
                      Style="{StaticResource ToggleStyle}">
                <CheckBox.LayoutTransform>
                    <ScaleTransform ScaleX="1.0" ScaleY="1.0" />
                </CheckBox.LayoutTransform>
            </CheckBox>
            <TextBlock VerticalAlignment="Center"
                       Text="English"
                       FontSize="16" />
        </StackPanel>
        <Button Width="240" Height="60"
                Margin="10,20"
                Grid.Row="4"
                Content="{DynamicResource InstallAndAct}"
                Style="{DynamicResource ButtonStyle2}"
                Click="Button_Click"
                FontSize="20" />
        <TextBlock HorizontalAlignment="Center"
                   TextWrapping="Wrap" Margin="0,10,0,0"
                   Grid.Row="5"
                   Foreground="{StaticResource MainBrush}"
                   Text="{DynamicResource HomeTip}"
                   TextAlignment="Center"
                   FontSize="16" />
    </StackPanel>
</Page>
